<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:gravity="center"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/monhoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon Hoc : Phap Luat Hang Khong" />

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/thoigian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thoi Gian : 7:00 -> 10:30" />

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/giaovien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giao Vien : Nguyen Thi Khanh Hoa" />

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/ngay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngay: 25/2/2025" />

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/phong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phong : G505" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>