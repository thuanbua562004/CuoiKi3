<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="1dp"
            android:paddingBottom="255dp"
            android:paddingLeft="1dp">

            <View
                android:id="@+id/hero_container"
                android:layout_width="606dp"
                android:layout_height="644dp"
                android:layout_marginTop="-254dp"
                android:layout_marginLeft="-124dp"
                android:background="#4696EB"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_alignParentBottom="true" />

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:background="@color/cornflowerblue_100"
                android:orientation="horizontal">

                <View
                    android:id="@+id/content_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cornflowerblue_100"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/headercontainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/rubik"
                    android:minWidth="42dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="09:20"
                    android:textColor="@android:color/black"
                    android:textStyle="500" />

                <LinearLayout
                    android:id="@+id/frame_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.4dp"
                    android:layout_marginRight="7.4dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/frame_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="var(--padding-11xs)">

                        <ImageView
                            android:id="@+id/frame_child"
                            android:layout_width="18.2dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/group_11" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/frame_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="var(--padding-11xs)">

                        <ImageView
                            android:id="@+id/frame_item"
                            android:layout_width="18.2dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/group_10" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/frame_inner"
                        android:layout_width="21.9dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="var(--padding-11xs)"
                        android:src="@drawable/group_9_2x" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/cho_mng_qun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/old_standard_tt"
                android:text="Quản Lý Hồ Sơ Sinh Viên"
                android:textSize="45sp"
                android:textStyle="bold"
                android:layout_below="@id/content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/media"
            android:layout_width="347dp"
            android:layout_height="200dp"
            android:layout_below="@id/main"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/books_winner_promo_videosixtee_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/bookswinnerpromovideosixteenbyninejumbo1600_1_2x"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/media_child"
                android:layout_width="35dp"
                android:layout_height="42dp"
                android:layout_marginTop="79dp"
                android:layout_marginStart="227dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/star_1" />

            <ImageView
                android:id="@+id/button_icon"
                android:layout_width="43dp"
                android:layout_height="51dp"
                android:layout_marginTop="28dp"
                android:layout_marginStart="280dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/polygon_1" />

            <View
                android:id="@+id/primarybutton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="134dp"
                android:layout_marginStart="287dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/primary_button_bg"
                android:layout_gravity="center" />
        </RelativeLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>